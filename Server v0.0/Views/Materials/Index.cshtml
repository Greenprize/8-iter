@model IEnumerable<Server_v0._0.Models.Material>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <form asp-action="ChangePrice" method="post">
        <div style="display: flex;align-items: center;text-align: center; margin: 0">
            <a style="display: flex;align-items: center;text-align: center;padding:3px" class="form-group">
                <label style="padding-right:10px; margin: 0 " class="control-label">Koef</label>
                <input style="max-width:150px" name="percent" class="form-control" />
            </a>
            <a class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </a>
        </div>
    </form>
</p>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title_M)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerGram)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title_M)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerGram)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaterialId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaterialId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaterialId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
